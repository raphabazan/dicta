{
  "productName": "Dicta",
  "version": "0.1.0",
  "identifier": "com.dicta.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "windows": [
      {
        "title": "Dicta",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": false
      },
      {
        "label": "recording-widget",
        "title": "Recording",
        "url": "widget.html",
        "width": 125,
        "height": 40,
        "resizable": false,
        "fullscreen": false,
        "visible": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true,
        "dragDropEnabled": false
      },
      {
        "label": "warning-widget",
        "title": "Warning",
        "url": "warning.html",
        "width": 280,
        "height": 60,
        "resizable": false,
        "fullscreen": false,
        "visible": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for main window",
          "windows": ["main", "recording-widget", "warning-widget"],
          "permissions": [
            "core:event:allow-listen",
            "core:event:allow-unlisten",
            "core:event:allow-emit",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:window:allow-set-position",
            "core:window:allow-set-always-on-top",
            "core:tray:allow-new",
            "core:tray:allow-set-icon",
            "core:tray:allow-set-menu",
            "core:tray:allow-set-tooltip"
          ],
          "commands": {
            "allow": ["start_recording_audio", "stop_recording_audio", "cancel_recording"]
          }
        }
      ]
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "globalShortcut": {
      "shortcuts": []
    },
    "clipboardManager": {}
  }
}
