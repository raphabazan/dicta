{
  "productName": "Dicta",
  "version": "0.4.1",
  "identifier": "com.dicta.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/icon.ico",
      "icons/icon-256.png"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "windows": [
      {
        "title": "Dicta",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": false
      },
      {
        "label": "recording-widget",
        "title": "Recording",
        "url": "widget.html",
        "width": 155,
        "height": 150,
        "resizable": false,
        "fullscreen": false,
        "visible": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true,
        "dragDropEnabled": false,
        "shadow": false
      },
      {
        "label": "prompt-input",
        "title": "Prompt",
        "url": "prompt-input.html",
        "width": 400,
        "height": 160,
        "resizable": false,
        "fullscreen": false,
        "visible": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true,
        "dragDropEnabled": false,
        "shadow": false
      },
      {
        "label": "tts-widget",
        "title": "TTS",
        "url": "tts-widget.html",
        "width": 100,
        "height": 32,
        "resizable": false,
        "fullscreen": false,
        "visible": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true,
        "dragDropEnabled": false,
        "shadow": false
      },
      {
        "label": "tts-toast",
        "title": "TTS Toast",
        "url": "tts-toast.html",
        "width": 140,
        "height": 40,
        "resizable": false,
        "fullscreen": false,
        "visible": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true,
        "dragDropEnabled": false,
        "shadow": false
      },
      {
        "label": "warning-widget",
        "title": "Warning",
        "url": "warning.html",
        "width": 280,
        "height": 60,
        "resizable": false,
        "fullscreen": false,
        "visible": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for main window",
          "windows": ["main", "recording-widget", "warning-widget", "prompt-input", "tts-widget", "tts-toast"],
          "permissions": [
            "core:event:allow-listen",
            "core:event:allow-unlisten",
            "core:window:allow-start-dragging",
            "core:window:allow-outer-position",
            "core:event:allow-emit",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:window:allow-set-position",
            "core:window:allow-set-always-on-top",
            "core:tray:allow-new",
            "core:tray:allow-set-icon",
            "core:tray:allow-set-menu",
            "core:tray:allow-set-tooltip",
            "updater:allow-check",
            "updater:allow-download-and-install",
            "process:allow-restart"
          ],
          "commands": {
            "allow": ["start_recording_audio", "stop_recording_audio", "cancel_recording", "stop_tts_playback", "get_tts_enabled", "set_tts_enabled", "get_selected_prompt_model", "set_selected_prompt_model", "get_queue_count", "get_queue_items", "retry_pending_queue", "delete_single_queue_item", "retry_single_queue_item", "play_queue_audio"]
          }
        }
      ]
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "globalShortcut": {
      "shortcuts": []
    },
    "clipboardManager": {},
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDUxMzZDQjRBM0Y2NUJBRUEKUldUcXVtVS9Tc3MyVVdDTG85NXhuMVVENGhsejZvR2tzWWxzV3cwd2ZOSzZTT0JqSFBPUE5MWTIK",
      "endpoints": [
        "https://github.com/raphabazan/dicta/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
